<div class="row span4 offset2 well">
<h4>Register for an account</h4>
<%= form_for @user do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username %>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<div class="actions">
	<%= f.submit "Create your account", :class => "btn btn-success" %>
	</div>
<% end %>
</div>